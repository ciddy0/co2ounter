{
  "manifest_version": 3,
  "name": "Co2oounter",
  "version": "1.0",
  "description": "Count how mnay prompts you are making",
  "permissions": ["storage", "webRequest", "webRequestBlocking"],
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://chatgpt.com/*",
    "https://claude.ai/*",
    "https://gemini.google.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "welcome-popup.html",
    "default_icon": "leaf.png"
  }
}
